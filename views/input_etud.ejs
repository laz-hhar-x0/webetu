<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Form Étudiant</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* لتقليص الحجم */
body {
  font-size: 0.9rem;
}

/* تصميم أكثر مرونة */
.container-fluid {
  max-width: 100%;
}

/* تصغير الحقول */
.form-control {
  font-size: 1rem;
  padding: 10px;
  width: 100%;
}

/* تصغير الأزرار */

.btn {
  font-size: 0.9rem;
  padding: 8px 15px;
}

/* تقليص المسافات */
.row {
  margin-bottom: 1rem;
}

/* تقليص تباعد العناوين */
h5 {
  font-size: 1.1rem;
  padding: 10px;
}

/* تخصيص الجدول ليناسب الشاشات الصغيرة */
.table {
  font-size: 0.9rem;
}

@media (max-width: 767px) {
  .container-fluid {
    padding: 15px;
  }

  .form-control {
    padding: 8px;
  }

  .btn {
    width: 100%;
    padding: 10px;
  }

  .module {
    font-size: 0.9rem;
  }

  .table td, .table th {
    padding: 8px;
  }
}

    .module {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body class="bg-light p-2">


  <form method="POST" action="/input">

    <div class="container-fluid px-3 py-4 bg-white rounded shadow">

          <!-- Label 1 -->
          <h5 class="mb-3 bg-primary">📘 Informations de l'étudiant</h5>
          <div class="row">
            <div class="col-12 mb-3">
              <label>First Name</label>
              <input type="text" class="form-control" name="firstName" placeholder="Enter First Name" required>
            </div>
            <div class="col-12 mb-3">
              <label>Last Name</label>
              <input type="text" class="form-control" name="lastName" placeholder="Enter Last Name" required>
            </div>
            <div class="col-12 mb-3">
              <label>Matricule</label>
              <input type="text" class="form-control" name="matricule" placeholder="Enter Matricule" required>
            </div>
            <div class="col-12 mb-3">
              <label>Password</label>
              <input type="password" class="form-control" name="password" placeholder="Enter Password" required>
            </div>
            <div class="col-12 mb-3">
              <label>Année</label>
              <input type="text" class="form-control" name="annee" placeholder="Enter Year" required>
            </div>
            <div class="col-12 mb-3">
              <label>Spécialité</label>
              <input type="text" class="form-control" name="spic" placeholder="Enter Speciality" required>
            </div>
          </div>



            <br><br><hr style="color: blue; "><br><br>




    
        



          <!-- Label 2 -->
          <h5 class="mt-4 mb-3  bg-primary">📚 Modules & Notes</h5>

          <table class="table table-bordered text-center align-middle">
            <thead class="table-success">
              <tr>
                <th>Module</th>
                <th>TD</th>
                <th>TP</th>
                <th>COURS</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Analyse</td>
                <td><input type="number" step="0.01" name="td1" class="form-control" id="td1"></td>
                <td><input type="number" step="0.01" name="tp1" class="form-control" id="tp1"></td>
                <td><input type="number" step="0.01" name="cours1" class="form-control" id="cours1"></td>
              </tr>
              <tr>
                <td>Algèbre</td>
                <td><input type="number" step="0.01" name="td2" class="form-control" id="td2"></td>
                <td><input type="number" step="0.01" name="tp2" class="form-control" id="tp2"></td>
                <td><input type="number" step="0.01" name="cours2" class="form-control" id="cours2"></td>
              </tr>
              <tr>
                <td>Matlab</td>
                <td><input type="number" step="0.01" name="td3" class="form-control" id="td3"></td>
                <td><input type="number" step="0.01" name="tp3" class="form-control" id="tp3"></td>
                <td><input type="number" step="0.01" name="cours3" class="form-control" id="cours3"></td>
              </tr>
              <tr>
                <td>Algorithme</td>
                <td><input type="number" step="0.01" name="td4" class="form-control" id="td4"></td>
                <td><input type="number" step="0.01" name="tp4" class="form-control" id="tp4"></td>
                <td><input type="number" step="0.01" name="cours4" class="form-control" id="cours4"></td>
              </tr>
              <tr>
                <td>Structure</td>
                <td><input type="number" step="0.01" name="td5" class="form-control" id="td5"></td>
                <td><input type="number" step="0.01" name="tp5" class="form-control" id="tp5"></td>
                <td><input type="number" step="0.01" name="cours5" class="form-control" id="cours5"></td>
              </tr>
              <tr>
                <td>Électro</td>
                <td><input type="number" step="0.01" name="td6" class="form-control" id="td6"></td>
                <td><input type="number" step="0.01" name="tp6" class="form-control" id="tp6"></td>
                <td><input type="number" step="0.01" name="cours6" class="form-control" id="cours6"></td>
              </tr>
              <tr>
                <td>Anglais</td>
                <td><input type="number" step="0.01" name="td7" class="form-control" id="td7"></td>
                <td><input type="number" step="0.01" name="tp7" class="form-control" id="tp7"></td>
                <td><input type="number" step="0.01" name="cours7" class="form-control" id="cours7"></td>
              </tr>
            </tbody>
          </table>  
          
          
        
            





          
    </div>
        
        
        <button type="submit" class="btn btn-primary w-100 mt-3"> 💾 Save</button>
    </form>


  <script>
    document.getElementById('jsonFile').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (!file) return;
    
      const reader = new FileReader();
      reader.onload = function(event) {
        try {
          const json = JSON.parse(event.target.result);
    
          if (Array.isArray(json.modules)) {
            json.modules.forEach((module, index) => {
              const i = index + 1; // index يبدأ من 0، نزيد 1 باش نوافق td1, tp1...
              document.getElementById(`td${i}`).value = module.td;
              document.getElementById(`tp${i}`).value = module.tp;
              document.getElementById(`cours${i}`).value = module.cours;
            });
          } else {
            alert("❌ Format JSON غير صالح !");
          }
        } catch (error) {
          alert("❌ خطأ في قراءة الملف !");
        }
      };
    
      reader.readAsText(file);
    });
    </script>




</body>
</html>






